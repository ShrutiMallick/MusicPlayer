<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/grey_900</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/opensans</item>
    </style>

    <style name="Theme.MusicPlayer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.ITunesPlayer.Splash" parent="Theme.MusicPlayer.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Main application theme. -->
    <style name="Theme.MusicPlayer.NoActionBar.Main">
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.MusicPlayer.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.MusicPlayer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MusicPlayer.Toolbar.Text" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>
</resources>